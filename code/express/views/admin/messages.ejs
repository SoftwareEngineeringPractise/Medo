<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../include") %>
    <title>控制台</title>
</head>

<body>
    <%- include("./header") %>
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li><a href="/admin">管理首页</a></li>
            <li class="active">认证管理</li>
        </ol>
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>角色</th>
                    <th>学校</th>
                    <th>院系</th>
                    <th>实验室</th>
                    <th>证件照</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i = 0, len = docs.length; i < len; i++){%>
                <tr>
                    <td>
                        <%=docs[i].userId.username%>
                    </td>
                    <td>
                        <%=docs[i].role%>
                    </td>
                    <td>
                        <%=docs[i].school%>
                    </td>
                    <td>
                        <%=docs[i].department%>
                    </td>
                    <td>
                        <%=docs[i].institute%>
                    </td>
                    <td>
                        <img src="<%=docs[i].verifyUrl%>" height="100" width="200"/>
                    </td>
                    <td>
                        <a href="/admin/messages/approval?id=<%=docs[i]._id%>&userId=<%=docs[i].userId._id%>" class="btn btn-default">同意</a>
                        <a href="/admin/messages/discard?id=<%=docs[i]._id%>&userId=<%=docs[i].userId._id%>" class="btn btn-danger">不同意</a>
                    </td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>
    <%- include("../pagination") %>
</body>

</html>